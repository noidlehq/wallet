<div class="card" style="width: 18rem;">
  <img src={{this.hero.uri}} class="card-img-top" alt={{this.hero.alt}}>
  <div class="card-body text-center" style="background-color: {{this.bgColor}}; color: {{this.color}}">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
    <button class="btn btn-primary" type="button" {{on "click" @onCancel}}>Cancel</button>
    <button class="btn btn-primary" type="button" {{on "click" @onConfirm}}>Request</button>
  </div>
</div>