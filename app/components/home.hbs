{{#if this.cameraError}}
  {{this.cameraError}}
{{/if}}
{{#if this.scanError}}
  {{this.scanError}}
{{/if}}
{{#if this.scanning}}
  <CodeScanner
    @device={{this.camera}}
    @onScanSuccess={{this.processCode}}
    @onScanError={{this.setScanError}}
    @onDevicesFound={{this.setDevices}}
    @onDevicesError={{this.setCamerasError}}
  />
{{/if}}
{{#if this.credentialManifest}}
  <ManifestPrompt
    @manifest={{this.credentialManifest}}
    @onFinal={{this.finalizeIssuance}}
    @onCancel={{this.cancelIssuance}}
    @onError={{this.setIssuanceError}}
  />
{{/if}}
{{#if this.verificationOffer}}
  <VerificationPrompt
    @offer={{this.verificationOffer}}
    @onFinal={{this.finalizeVerification}}
    @onError={{this.setVerificationError}}
  />
{{/if}}